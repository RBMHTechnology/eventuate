#!/bin/sh

# generate example classpath script only once
sbt generateClasspath

for location in A B C D E F
do
    if command -v osascript >/dev/null 2>&1; then
        osascript -e "tell app \"Terminal\"
            do script \"cd `pwd`; ./eventuate-examples/bin/ordermgnt-location $* $location\"
        end tell"
    else
        if command -v xterm >/dev/null 2>&1; then
            xterm -title "location $location" -e "./eventuate-examples/bin/ordermgnt-location $* $location" &
        else
            echo "Neither osascript nor xterm were found";
        fi
    fi
done
